{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opencode-plugin-llama.cpp",
  "version": "0.1.0",
  "description": "OpenCode plugin for enhanced llama.cpp support with auto-detection and dynamic model discovery",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "build": "pnpm run typecheck && pnpm run test:run",
    "validate": "pnpm run lint && pnpm run typecheck && pnpm run test:run",
    "validate:config": "node scripts/validate-config.ts",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "opencode",
    "llama-cpp",
    "plugin",
    "local-llm",
    "openai-compatible"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/llessi06/opencode-llama.cpp.git"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.21"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}
